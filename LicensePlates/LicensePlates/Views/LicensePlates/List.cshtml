@model ICollection<title.Models.LicensePlate>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/StyleSheet.css")" />
</head>
<body>
    <table>
        <tr>
            <td>Plate</td>
            <td>Car brand</td>
            <td>Car model</td>
            <td>Color</td>
            <td>Year</td>
        </tr>
        @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Plate</td>
                <td>@item.CarBrand</td>
                <td>@item.CarModel</td>
                <td>@item.Color</td>
                <td>@item.Year</td>
            </tr>
        }
    </table>
    <div>
        <form action="/search" method="post" class="col-lg-3">
            <label for="Title"></label>
            <input type="text" class="form-control" placeholder="Text input" name="Title" /><br>
            <br /><button type="submit" class="btn btn-default">Search</button>
        </form>
    </div>
    <h1><a href="/search/policecars">Police cars only</a></h1>
    <h1><a href="/search/diplomatcars">Diplomats only</a></h1>
</body>
</html>